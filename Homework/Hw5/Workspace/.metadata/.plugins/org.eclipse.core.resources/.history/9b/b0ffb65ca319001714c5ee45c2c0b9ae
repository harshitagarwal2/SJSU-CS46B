			HashSet<Integer> hs = new HashSet<>();
			for(int j=0;j<9;j++)
			{
				if(!hs.add(values[j][i]))
					return false;
			}
		}*/
		/*for(int i=0;i<9;i++)
		{
			for(int j=0;j<9;j++)
			{
				if(i<3)
				{
					if(j<3)
					{
						
					}
					else if(j>3&&j<6)
					{
						
					}
					else
					{
						
					}
				}
				if(i>3&&i<6)
				{
					if(j<3)
					{
						
					}
					else if(j>3&&j<6)
					{
						
